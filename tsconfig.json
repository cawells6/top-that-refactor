{
  "compilerOptions": {
    "target": "es2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "checkJs": false,
    "outDir": "./dist",
    "rootDir": "./",
    "noEmit": false,
    "strict": true,
    "skipLibCheck": true,
    "types": ["jest", "node"]
  },
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node",
    "transpileOnly": true
  },
  "include": [
    "controllers/**/*.ts",
    "models/**/*.ts",
    "scripts/**/*.ts",
    "src/**/*.ts",
    "tests/**/*.ts",
    "utils/**/*.ts",
    "vite.config.ts",
    "server.ts",
    "jest-globals.d.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "public/scripts/**/*.js"
  ]
}

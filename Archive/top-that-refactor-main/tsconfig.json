{
  "compilerOptions": {
    "target": "es2022",
    "module": "es2022",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "checkJs": true,
    "noEmit": true,
    "strict": false,
    "types": ["jest"]
  },
  "include": ["**/*.js", "**/*.mjs", "**/*.cjs", "**/*.d.ts"],
  "exclude": ["node_modules", "dist"]
}

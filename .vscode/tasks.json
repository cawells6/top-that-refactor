{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Run",
      "type": "shell",
      "icon": {
        "id": "play",
        "color": "charts.red"
      },
      "command": "bash",
      "args": ["-lc", "./run"],
      "group": "build",
      "isBackground": true,
      "problemMatcher": [],
      "runOptions": {
        "instanceLimit": 1
      },
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "panel": "dedicated"
      }
    },
    {
      "label": "Start Development Environment",
      "type": "shell",
      "command": "npm run run:noopen",
      "group": "build",
      "isBackground": true,
      "problemMatcher": [],
      "runOptions": {
        "instanceLimit": 1
      },
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "panel": "dedicated"
      }
    },
    {
      "label": "Vite Dev Build",
      "type": "shell",
      "command": "npm run dev:client",
      "args": [],
      "isBackground": true,
      "problemMatcher": ["$tsc"],
      "group": "build"
    },
    {
      "label": "Ship It With Message",
      "type": "shell",
      "icon": {
        "id": "rocket",
        "color": "terminal.ansiGreen"
      },
      "command": "C:\\\\Program Files\\\\Git\\\\bin\\\\bash.exe",
      "args": [
        "-lc",
        "./scripts/shipit.sh \"${input:commitMessage}\""
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "dedicated",
        "showReuseMessage": false,
        "clear": false
      }
    }
  ],
  "inputs": [
    {
      "id": "commitMessage",
      "type": "promptString",
      "description": "Enter your commit message",
      "default": "Update"
    }
  ]
}

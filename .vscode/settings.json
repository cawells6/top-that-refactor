{
  // terminal + basics
  "terminal.integrated.sendKeybindingsToShell": true,
  "terminal.integrated.enableMultiLinePasteWarning": "never",
  "terminal.integrated.defaultProfile.windows": "Git Bash",
  "terminal.integrated.copyOnSelection": true,
  "terminal.integrated.initialHint": false,

  "workbench.editor.enablePreview": false,
  "explorer.confirmDelete": false,
  "explorer.confirmDragAndDrop": false,
  "security.workspace.trust.untrustedFiles": "open",
  "breadcrumbs.enabled": false,

  // editor readability
  "editor.fontFamily": "'JetBrains Mono', 'Fira Code', Consolas, monospace",
  "editor.fontSize": 15,
  "editor.lineHeight": 24,
  "editor.renderWhitespace": "selection",
  "editor.bracketPairColorization.enabled": true,
  "editor.guides.bracketPairs": true,
  "editor.renderControlCharacters": false,
  "editor.minimap.enabled": false,
  "editor.defaultFormatter": "esbenp.prettier-vscode",

  // theme + UI colors
  "workbench.colorTheme": "Abyss",
  "workbench.preferredDarkColorTheme": "GitHub Dark Default",
  "workbench.iconTheme": "vs-minimal",

  "workbench.colorCustomizations": {
    // global inputs (this is what controls the chat input textbox text color too)
    "input.background": "#000000",
    "input.foreground": "#ffffff",
    "input.placeholderForeground": "#ffffff",
    "input.border": "#ffffff",

    // menus + titlebar
    "menu.background": "#000000",
    "menu.foreground": "#ffffff",
    "menu.selectionBackground": "#ffffff",
    "menu.selectionForeground": "#000000",
    "menu.border": "#ffffff",
    "titleBar.activeBackground": "#000000",
    "titleBar.activeForeground": "#ffffff",

    // editor
    "editor.background": "#000000",
    "editor.foreground": "#e0e0e0",
    "editorCursor.foreground": "#ffffff",
    "editorLineNumber.foreground": "#ffffff",
    "editorLineNumber.activeForeground": "#ffffff",

    // terminal
    "terminal.background": "#000000",
    "terminal.foreground": "#ffffff",
    "terminalCursor.foreground": "#ffffff",

    // sidebar + lists (this is what controls chat session titles + Problems list text)
    "sideBar.background": "#000000",
    "sideBar.foreground": "#ffffff",
    "sideBarTitle.foreground": "#ffffff",

    "list.foreground": "#ffffff",
    "list.hoverForeground": "#ffffff",
    "list.focusForeground": "#ffffff",
    "list.inactiveSelectionForeground": "#ffffff",
    "list.activeSelectionForeground": "#ffffff",

    // panel + Problems
    "panel.background": "#000000",
    "panel.border": "#ffffff",
    "panelTitle.activeForeground": "#ffffff",
    "panelTitle.inactiveForeground": "#ffffff",
    "panelTitle.activeBorder": "#ffffff",

    "list.errorForeground": "#e57373",
    "list.warningForeground": "#FFB74D",
    "editorError.foreground": "#e57373",
    "editorWarning.foreground": "#FFB74D",

    // status bar
    "statusBar.background": "#000000",
    "statusBar.foreground": "#ffffff",
    "statusBar.border": "#e4e1e1",
    "statusBar.debuggingBackground": "#e57373",
    "statusBar.debuggingForeground": "#000000",

    // chat / codex view colors (request bubbles, slash commands, avatars, etc.)
    "chat.requestBorder": "#ffffff",
    "chat.requestBackground": "#000000",
    "chat.requestBubbleBackground": "#000000",
    "chat.requestBubbleHoverBackground": "#0a0a0a",
    "chat.requestCodeBorder": "#ffffff",
    "chat.slashCommandBackground": "#000000",
    "chat.slashCommandForeground": "#ffffff",
    "chat.avatarBackground": "#000000",
    "chat.avatarForeground": "#ffffff",
    "chat.editedFileForeground": "#ffffff"
  },

  // syntax highlighting
  "editor.tokenColorCustomizations": {
    "textMateRules": [
      { "scope": ["keyword", "storage.type", "storage.modifier"], "settings": { "foreground": "#167357" } },
      { "scope": ["entity.name.function", "support.function"], "settings": { "foreground": "#569CD6" } },
      { "scope": ["string", "string.template"], "settings": { "foreground": "#ef6525" } },
      { "scope": ["variable", "variable.parameter"], "settings": { "foreground": "#9CDCFE" } },
      { "scope": ["comment"], "settings": { "foreground": "#d955fee7" } },
      { "scope": ["constant.numeric"], "settings": { "foreground": "#B5CEA8" } }
    ]
  },

  // copilot/chat + tools
  "github.copilot.chat.codesearch.enabled": true,
  "github.copilot.chat.editor.temporalContext.enabled": true,
  "github.copilot.chat.edits.temporalContext.enabled": true,
  "github.copilot.enable": { "scminput": true, "markdown": true, "plaintext": true },
  "github.copilot.chat.languageContext.fix.typescript.enabled": true,
  "github.copilot.chat.languageContext.inline.typescript.enabled": true,
  "github.copilot.chat.languageContext.typescript.enabled": true,
  "github.copilot.chat.agent.thinkingTool": true,
  "github.copilot.chat.completionContext.typescript.mode": "on",
  "github.copilot.chat.search.keywordSuggestions": true,
  "github.copilot.nextEditSuggestions.enabled": true,

  "chat.agent.maxRequests": 5000,
  "chat.agent.thinking.generateTitles": false,
  "chat.checkpoints.showFileChanges": true,
  "chat.editing.confirmEditRequestRemoval": false,
  "chat.viewSessions.orientation": "stacked",
  "chat.promptFilesRecommendations": {},

  "chatgpt.openOnStartup": true,
  "chatgpt.followUpQueueMode": "interrupt",

  "claudeCode.preferredLocation": "panel",
  "gitlens.ai.model": "vscode",
  "gitlens.ai.vscode.model": "copilot:gpt-4.1",

  "files.eol": "\n",
  "files.autoSave": "afterDelay",
  "diffEditor.codeLens": true,
  "git.confirmSync": false,
  "git.enableSmartCommit": true,
  "playwright.showTrace": true,
  "zenMode.silentNotifications": false,

  "workbench.activityBar.location": "top",
  "workbench.secondarySideBar.defaultVisibility": "hidden",
  "workbench.secondarySideBar.showLabels": false,
  "workbench.settings.applyToAllProfiles": [
    "github.copilot.chat.codeGeneration.useInstructionFiles",
    "chat.tools.autoApprove"
  ],
  "workbench.editor.autoLockGroups": {
    "default": true,
    "workbench.editor.chatSession": false,
    "workbench.editorinputs.searchEditorInput": true,
    "jupyter-notebook": true,
    "notebookOutputEditor": true
  },

  "geminicodeassist.project": "canvas-decker-rvp17",
  "geminicodeassist.inlineSuggestions.enableAuto": true,
  "geminicodeassist.agentDebugMode": true,
  "geminicodeassist.agentYoloMode": true,

  "copilot-instructions.md": [],

  "chat.tools.terminal.autoApprove": {
    "/^cd /c/Top-That-Refactor && git add \\.github/copilot-instructions\\.md public/scripts/render\\.ts$/": {
      "approve": true,
      "matchCommandLine": true
    },
    "git commit": true,
    "git push": true,
    "npm run build": true,
    "git add": true,
    "/^git remote -v && git ls-remote --heads origin invite-friends-feature-9693840481560173110 \\|\\| true && git fetch origin invite-friends-feature-9693840481560173110$/": {
      "approve": true,
      "matchCommandLine": true
    }
  },

  // action buttons
  "actionButtons": {
    "defaultColor": "#fcff82",
    "reloadButton": "â†»",
    "loadNpmCommands": false,
    "commands": [
      { "name": "Run", "color": "#e57373", "singleInstance": true, "focus": true, "command": "./run" },
      { "name": "Ship", "color": "#81c784", "command": "./scripts/shipit.sh" },
      { "name": "Switch", "color": "#3395e0", "command": "./scripts/switch-branch.sh" }
    ]
  }
}

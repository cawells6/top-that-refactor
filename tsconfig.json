{
  "compilerOptions": {
    "target": "es2022",
    "module": "NodeNext", // Changed from es2022 to NodeNext
    "moduleResolution": "NodeNext", // Recommended for modern Node.js ESM
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "allowJs": true, // If you still have some .js files you want TS to check
    "checkJs": false,
    "outDir": "./dist",
    "rootDir": "./", // Assuming server.ts, controllers, models, etc., are at root or in subdirs
    "noEmit": false, // Allow tsc to output .js files for 'build' and 'start' scripts
    "strict": true,
    "skipLibCheck": true, // Removed extra comma and string
    "types": ["jest", "node"]
  },
  "include": [
    "server.ts",
    "controllers/**/*.ts",
    "models/**/*.ts",
    "utils/**/*.ts",
    "src/**/*.ts", // If you have a generic src folder
    "scripts/**/*.ts",
    "tests/**/*.ts",
    "jest-globals.d.ts"
  ],
  "exclude": ["node_modules", "dist", "public"]
}
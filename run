#!/usr/bin/env bash

# Ultra-minimal development starter.
# Quiet by default (only warnings/errors). Set TOPTHAT_VERBOSE=1 for full logs.

if [ "${TOPTHAT_VERBOSE:-}" = "1" ]; then
  node ./run.js
  exit $?
fi

echo "[run] Filtering output (warnings/errors only). Set TOPTHAT_VERBOSE=1 for full logs." >&2
bash scripts/run-quiet.sh node ./run.js
exit $?

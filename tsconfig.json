{
  "compilerOptions": {
    "target": "es2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "checkJs": false,
    "outDir": "./dist",
    "rootDir": "./", // Project root
    "noEmit": false, 
    "strict": true,
    "skipLibCheck": true,
    "types": ["jest", "node"],
    "lib": ["es2022", "dom", "dom.iterable"],
    "allowImportingTsExtensions": false, // Explicitly set to false
    "moduleDetection": "force", // Ensure all files are treated as modules
    "composite": true, // Added for project references
    "declaration": true, // Recommended with composite: true
    "declarationMap": true // Recommended with composite: true
  },
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node",
    "transpileOnly": true
  },
  "include": [
    "**/*.ts" // Include all .ts files in the project
  ],
  "exclude": [
    "node_modules", 
    "dist",
    "public/scripts/tsconfig.json" // Exclude the nested tsconfig
  ]
}

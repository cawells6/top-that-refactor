{
  "name": "top-that-refactor",
  "version": "1.0.0",
  "description": "Refactored Top That! card game server and utilities",
  "main": "dist/server.js",
  "type": "module",
  "scripts": {
    "build": "tsc -p tsconfig.build.json && vite build",
    "prestart": "npx kill-port 3000 5173",
    "start": "node dist/start-server.js",
    "gpush": "bash scripts/gpush.sh",
    "dev": "vite --host",
    "force": "node --loader ts-node/esm ./scripts/force-dev-start.ts",
    "dev:force": "node --loader ts-node/esm ./scripts/force-dev-start.ts",
    "test": "jest",
    "test:integration": "cross-env NODE_OPTIONS=--experimental-vm-modules jest --config jest.integration.config.cjs",
    "build:smoke": "bash scripts/build-smoke-test.sh",
    "dev:client": "vite --host",
    "build:client": "vite build",
    "preview:client": "vite preview",
    "lint": "eslint . --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write \"**/*.{ts,js,json,md,html,css}\"",
    "format:check": "prettier --check \"**/*.{ts,js,json,md,html,css}\"",
    "download:cards": "node --loader ts-node/esm ./scripts/download_cards.ts",
    "postbuild": "node scripts/postbuild-fix-extensions.cjs",
    "start:multi": "concurrently \"PORT=3000 node --loader ts-node/esm ./start-server.ts\" \"PORT=8080 node --loader ts-node/esm ./start-server.ts\"",
    "dev:multi": "concurrently \"cross-env PORT=3000 node --loader ts-node/esm ./start-server.ts\" \"cross-env PORT=8080 node --loader ts-node/esm ./start-server.ts\"",
    "dev:server": "node scripts/clean-start.cjs && nodemon --config nodemon.json --exec \"node --loader ts-node/esm ./start-server.ts\"",
    "dev:server:clean": "nodemon --config nodemon.json --exec \"node --loader ts-node/esm ./start-server.ts\"",
    "dev:server:fast": "nodemon --config nodemon.json --exec \"node --no-warnings --loader ts-node/esm ./start-server.ts\"",
    "dev:all": "npx kill-port 3000 5173 && concurrently -k -s first \"npm run dev:server:clean\" \"npm run dev:client\"",
    "dev:all:fast": "concurrently -k -s first \"nodemon --config nodemon.json --exec \\\"node --no-warnings --loader ts-node/esm ./start-server.ts\\\"\" \"vite\"",
    "dev:all:raw": "concurrently --kill-others-on-fail -k -s first \"npm run dev:server\" \"npm run dev:client\"",
    "dev:all:clean": "npx kill-port 3000 5173 && concurrently -k -s first \"npm run dev:server:clean\" \"npm run dev:client\"",
    "dev:all:monitor": "npx kill-port 3000 5173",
    "dev:all:enhanced": "npx kill-port 3000 5173 && concurrently -k -s first \"npm run dev:server\" \"npm run dev:client\"",
    "dev:all:watch": "chokidar \"src/**/*\" \"public/**/*\" -c \"npm run dev:all\" --initial",
    "wait": "node wait.js",
    "clean:ports": "node wait.js",
    "show:ports": "node scripts/simplified-port-status.cjs",
    "monitor:ports": "npm run show:ports",
    "test:ports": "npm run clean:ports && echo 'Cleanup complete. Starting dev servers...' && npm run dev:all:enhanced",
    "clean-dev": "bash scripts/clean-start.bat",
    "kill:server": "npx kill-port 3000",
    "kill:client": "npx kill-port 5173",
    "kill:all": "npx kill-port 3000 5173",
    "check:ports": "node scripts/simplified-port-checker.js",
    "dev:enhanced": "node scripts/start-dev.js",
    "dev:safe": "npx kill-port 3000 5173 && node wait-enhanced.js && npm run dev:all",
    "start:dev": "node scripts/start-dev.js",
    "run": "./run",
    "run:noopen": "cross-env NO_AUTO_OPEN=1 ./run",
    "run:quiet": "bash scripts/run-quiet.sh npm run dev:all:clean",
    "watch:runbat": "powershell -NoProfile -ExecutionPolicy Bypass -File scripts/watch-runbat.ps1 -RunOnStart -UseWindowsTerminalTab",
    "watch:runbat:window": "powershell -NoProfile -ExecutionPolicy Bypass -File scripts/watch-runbat.ps1 -RunOnStart"
  },
  "dependencies": {
    "chokidar-cli": "^3.0.0",
    "express": "^4.18.2",
    "socket.io": "^4.7.2",
    "socket.io-client": "^4.8.1",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "@babel/core": "^7.27.1",
    "@babel/preset-env": "^7.27.2",
    "@babel/preset-typescript": "^7.27.1",
    "@eslint/js": "9.27.0",
    "@playwright/test": "^1.57.0",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@types/express": "^4.17.22",
    "@types/jest": "^29.5.14",
    "@types/socket.io-client": "^1.4.36",
    "@typescript-eslint/eslint-plugin": "^8.32.1",
    "@typescript-eslint/parser": "^8.32.1",
    "babel-jest": "^29.7.0",
    "babel-plugin-transform-import-meta": "^2.3.3",
    "concurrently": "^9.1.2",
    "cross-env": "^7.0.3",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^10.1.5",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-jest": "^28.11.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^5.4.0",
    "eslint-plugin-promise": "^7.2.1",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "kill-port": "^2.0.1",
    "nodemon": "^3.1.10",
    "open": "^10.1.2",
    "prettier": "^3.5.3",
    "ts-jest": "^29.3.4",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3",
    "vite": "^6.3.5",
    "wait-on": "8.0.3"
  },
  "optionalDependencies": {
    "sharp": "^0.32.1"
  },
  "keywords": [],
  "author": "",
  "license": "ISC"
}

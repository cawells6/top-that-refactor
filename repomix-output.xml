      handRow.className = p.id === myId ? 'hand' : 'opp-hand';
      if (p.id === myId && p.hand && p.hand.length > 0) {
        // Render hand cards and tag each img with its index for play detection
        for (let i = 0; i < p.hand.length; i++) {
          const card = p.hand[i];

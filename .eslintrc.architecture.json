{
  "extends": ["@typescript-eslint/recommended"],
  "rules": {
    "no-direct-layer-skip": "error",
    "no-mixed-concerns": "error",
    "require-interface-first": "error"
  },
  "overrides": [
    {
      "files": ["**/*.test.ts"],
      "rules": {
        "test-mock-correct-layer": "error",
        "test-environment-documented": "warn"
      }
    },
    {
      "files": ["**/events.ts", "**/ui/**"],
      "rules": {
        "no-direct-socket-access": "error"
      }
    }
  ]
}

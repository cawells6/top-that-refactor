{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Start Development Environment",
      "type": "shell",
      "command": "./run",
      "group": "build",
      "isBackground": true,
      "problemMatcher": [],
      "options": {
        "cwd": "${workspaceFolder}"
      }
    },
    {
      "label": "Vite Dev Build",
      "type": "shell",
      "command": "npm run dev:client",
      "args": [],
      "isBackground": true,
      "problemMatcher": ["$tsc"],
      "group": "build"
    },
    {
      "label": "Ship It With Message",
      "type": "shell",
      "command": "git add . && git commit -m \"${input:commitMessage}\" && git push origin HEAD && git checkout main && git pull origin main && git merge - && git push origin main",
      "problemMatcher": []
    }
  ],
  "inputs": [
    {
      "id": "commitMessage",
      "type": "promptString",
      "description": "Enter your commit message",
      "default": "Update"
    }
  ]
}